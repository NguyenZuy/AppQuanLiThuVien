<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".ui.DetailReceiptActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/button_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/frame_order"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_centerInParent="true"
                android:background="@drawable/frame_horizontal" />

            <ImageView
                android:id="@+id/frame_order_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/frame_icon_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/icon_order_book"/>

            <ImageView
                android:id="@+id/frame_order_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/frame_icon_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/icon_order_user"/>

            <ImageView
                android:id="@+id/frame_order_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/frame_icon_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="212dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/icon_order_calendar"/>

            <ImageView
                android:id="@+id/frame_order_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/frame_icon_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="287dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/icon_order_success"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#323842"
        android:text="Books Infomation"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:divider="@android:color/darker_gray"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:dividerHeight="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:text="$ 800"/>

        <Button
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="200dp"
            android:fontFamily="@font/inter_bold"
            android:text="Next"
            android:layout_height="60dp"/>

    </RelativeLayout>

</LinearLayout>